@page
@model ClientsCRUD.Pages.Act.actRegListModel
@{
    ViewData["Title"] = "活動報名";
}

<h2>活動清單</h2>
<div>

    <form method="GET">
        <div class="row mb-1">
            <div class="col-sm-2">
                <input type="text" class="form-control" name="Qry" value="" />
            </div>
            <div class="col-sm-2 d-grid">
                <button type="submit" class="btn btn-primary">查詢</button>
            </div>
        </div>
    </form>
</div>
@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>
            @Model.errorMessage
        </strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>

    </div>
}
<table class="table">
    <thead>
        <tr>
            <th>編號</th>
            <th>類別</th>
            <th>名稱</th>
            <th>主辦單位</th>
            <th>地點</th>
            <th>開始/結束</th>
            <th>已報名/限額</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.listAct)
        {
            <tr>
                <td>@item.actNo</td>
                <td>@item.actType</td>
                <td>@item.actName</td>
                <td>@item.actDepart</td>
                <td>@item.actLocation</td>
                <td> @item.actStart <br /> @item.actEnd </td>
                <td> 人數 </td>

                <td>
                    <a class="btn btn-primary btn-sm" href="/Act/actMemReg?id=@item.actNo">我要報名</a>
                    <a class="btn btn-primary btn-sm" href="/Act/actShowDetail?id=@item.actNo">看詳細內容</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p> 總共有 @Model.records 筆資料, 其中符合查詢條件的有 @Model.listAct.Count 筆。 </p>


