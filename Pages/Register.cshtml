<form method="post">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">帳號</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="uname" value="@Model.mInfo.memUname" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">密碼</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="pwd" value="@Model.mInfo.memPwd" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">姓名</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.mInfo.memName" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Email</label>
        <div class="col-sm-6">
            <input type="email" class="form-control" name="email" value="@Model.mInfo.memEmail" />
        </div>
    </div>

    <!--
    @if (Model.succMessage.Length > 0)
